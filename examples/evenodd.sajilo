// A simple program to find even and odd numbers.

ans = "y";

jaba ans == "y" {
    user_input = padha("\nEnter one number: \n");

    yedi user_input == "n" {
        ans = user_input;
    }

    sankhya = anka(user_input);
    
    yedi sankhya % 2 == 0 {
        lekha "Even number \n";
    }
    navaye {
        lekha "Odd Number";
		lekha "\n";
    }

}